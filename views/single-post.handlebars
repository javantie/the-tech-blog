{{> post-info post}}

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit" class="upvote-btn bg-yellow-600 text-lg px-4 py-1 hover:bg-yellow-400">Add Comment</button>
    <button type="button" class="upvote-btn bg-green-600 text-lg px-4 py-1 hover:bg-green-400">Like</button>
  </div>
</form>
{{/if}}

{{> comments post.comments}}

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
<script src="/javascript/edit-post.js"></script>
{{/if}}