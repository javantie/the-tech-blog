<article class="post border-2 border-yellow-900">
  <div class="title font-semibold bg-yellow-900 text-gray-400 flex justify-between p-2">
 <a href="/post/{{id}}"><h3>{{title}}</h3></a>
    <span>Posted by {{user.username}} on {{format_date created_at}}</span>
  </div>
  <div class="text-info p-1">
        <span>{{post_url}}</span>
  </div>
  <div class="meta bg-yellow-600">
    <a class="font-bold pl-1" href="/post/{{id}}">{{comments.length}} {{format_plural "Comment" comments.length}}</a>
       | {{vote_count}} {{format_plural "Like" post.vote_count}}

  </div>
</article>

